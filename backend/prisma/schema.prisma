generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Invoice {
  id           String   @id @default(uuid())
  customerName String
  amount       Float
  description  String
  dueDate      DateTime
  status       String   @default("PENDING") // PENDING, PAID, OVERDUE
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
